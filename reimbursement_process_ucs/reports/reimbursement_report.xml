<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Graph View -->
    <record id="view_reimbursement_graph" model="ir.ui.view">
        <field name="name">reimbursement.request.graph</field>
        <field name="model">reimbursement.request</field>
        <field name="arch" type="xml">
            <graph string="Reimbursement Analysis" type="bar">
                <field name="employee_id"/>
                <field name="month"/>
                <field name="total_amount" type="measure"/>
                <field name="approve_total_amount" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Pivot View -->
    <record id="view_reimbursement_pivot" model="ir.ui.view">
        <field name="name">reimbursement.request.pivot</field>
        <field name="model">reimbursement.request</field>
        <field name="arch" type="xml">
            <pivot string="Reimbursement Pivot">
                <field name="employee_id" type="row"/>
                <field name="month" type="col"/>
                <field name="total_amount" type="measure"/>
                <field name="approve_total_amount" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Action for Report -->
    <record id="action_reimbursement_report" model="ir.actions.act_window">
        <field name="name">Reimbursement Report</field>
        <field name="res_model">reimbursement.request</field>
        <field name="view_mode">pivot,graph</field>
        <field name="domain">[('state', '=', 'approved')]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No reimbursement records to display.
            </p>
        </field>
    </record>

</odoo>