<odoo>
    <record id="module_category_reimbursement" model="ir.module.category">
        <field name="name">Reimbursement</field>
        <field name="description">Access rights related to reimbursement requests</field>
        <field name="sequence">100</field>
    </record>

    <!-- Groups -->
    <record id="group_reimbursement_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="reimbursement_process_ucs.module_category_reimbursement"/>
    </record>

    <record id="group_reimbursement_admin" model="res.groups">
        <field name="name">Admin</field>
        <field name="category_id" ref="reimbursement_process_ucs.module_category_reimbursement"/>
    </record>

    <!-- Record Rules -->
    <record id="reimbursement_admin_rule" model="ir.rule">
        <field name="name">Admin: See All</field>
        <field name="model_id" ref="model_reimbursement_request"/>
        <field name="groups" eval="[(4, ref('reimbursement_process_ucs.group_reimbursement_admin'))]"/>
        <field name="domain_force">[(1, '=', 1)]</field>
    </record>

    <record id="reimbursement_user_rule" model="ir.rule">
        <field name="name">User: See Own</field>
        <field name="model_id" ref="model_reimbursement_request"/>
        <field name="domain_force">[('employee_id.user_id', '=', user.id)]</field>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
        <field name="groups" eval="[(4, ref('reimbursement_process_ucs.group_reimbursement_user'))]"/>
    </record>

    <record id="reimbursement_line_user_rule" model="ir.rule">
        <field name="name">Reimbursement Line: User Own Records</field>
        <field name="model_id" ref="model_reimbursement_line"/>
        <field name="domain_force">[('employee_id.user_id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('reimbursement_process_ucs.group_reimbursement_user'))]"/>
    </record>

    <record id="reimbursement_line_manager_rule" model="ir.rule">
        <field name="name">Reimbursement Line: Manager All Records</field>
        <field name="model_id" ref="model_reimbursement_line"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('reimbursement_process_ucs.group_reimbursement_admin'))]"/>
    </record>

</odoo>